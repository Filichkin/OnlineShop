# Database Configuration
POSTGRES_PORT=5432
POSTGRES_PASSWORD=your_strong_database_password_here
POSTGRES_USER=postgres
POSTGRES_DB=happy_cow
POSTGRES_HOST=localhost

# Security - IMPORTANT: Change these values in production!
# SECRET must be at least 32 characters long
# Generate a secure secret with: openssl rand -hex 32
SECRET=change_this_to_a_secure_random_string_at_least_32_chars_long

# Initial Superuser Configuration
# IMPORTANT: Superuser password requirements:
# - Minimum 12 characters
# - Cannot be common passwords (password, admin, 12345, etc.)
# - Cannot contain weak patterns (password, admin, qwerty, test, user)
# - Use strong, unique password with mixed characters
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=change_this_secure_password_min_12_chars

# User Password Configuration
USER_PASSWORD_MIN_LEN=8

# JWT Token Configuration (in seconds)
JWT_TOKEN_LIFETIME=3600

# Email Configuration for Order Notifications
# Use Yandex Mail SMTP server
# Get app password from: https://id.yandex.ru/security/app-passwords
YANDEX_EMAIL=your_email@yandex.ru
YANDEX_APP_PASS=your_yandex_app_password_here
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
